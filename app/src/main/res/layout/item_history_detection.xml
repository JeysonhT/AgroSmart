<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/listCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/round_card"
            android:gravity="center_horizontal">
            <!-- Icono -->
            <ImageView
                android:id="@+id/iconCropImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Crop icon" />
            <!--Espacio entre los iconos-->
            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iconDeficiencyImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Deficiency icon" />
            <!-- Espacio entre los iconos y el texto -->
            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/textDateDiagnosisHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:text="@string/deficiencias"
                android:textColor="@color/Anti_flash_White"
                />
            <ImageView
                android:id="@+id/imvBotonBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/borrar"
                android:contentDescription="btnDelete"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>