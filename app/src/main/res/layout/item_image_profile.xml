<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/Anti_flash_White"
            android:contentDescription="@string/imageprofileText"
            android:src="@drawable/invitado_holi"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:src="@drawable/agregar_24"
        android:elevation="10dp"
        app:fabSize="normal"
        app:maxImageSize="50dp"
        android:backgroundTint="@color/Anti_flash_White"
        android:contentDescription="@string/editprofilephotoText" />
    <TextView
        android:id="@+id/textNameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProfileName"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@color/ecru"
            >
            <TextView
                android:id="@+id/textEmailProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailprofileExample"
                android:textSize="30sp"
                android:textColor="@color/bice_blue"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>