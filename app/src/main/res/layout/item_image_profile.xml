<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="@drawable/invisible_drawable">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:contentDescription="@string/imageprofileText"
            android:src="@drawable/invitado_holi"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textNameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProfileName"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/ecru"
            >
            <TextView
                android:id="@+id/textEmailProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailprofileExample"
                android:textSize="15sp"
                android:textColor="@color/bice_blue"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>