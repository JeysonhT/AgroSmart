<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgroSmart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_orange</item>
        <item name="colorPrimaryVariant">@color/Anti_flash_White</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ecru</item>
        <item name="colorSecondaryVariant">@color/mid_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    
    <style name="Theme.AgroSmart.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/mid_yellow</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/isotipo</item>

        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.AgroSmart</item>
    </style>
</resources>